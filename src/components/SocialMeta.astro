---
const { meta, title } = Astro.props;

const defaultTitle = meta?.title || title;
const defaultDescription = meta?.description || defaultTitle;
const metaTags = [
  { name: "title", content: defaultTitle },
  { name: "description", content: defaultDescription },
  {
    name: "og:image",
    content: meta?.og_image,
  },
  { name: "og:title", content: meta?.og_title || defaultTitle },
  {
    name: "og:description",
    content: meta?.og_description || defaultDescription,
  },
  {
    name: "twitter:image",
    content: meta?.twitter_title || defaultTitle,
  },
  {
    name: "twitter:title",
    content: meta?.twitter_title || defaultTitle,
  },
  {
    name: "twitter:descrition",
    content: meta?.twitter_description || defaultDescription,
  },
];
---

<>
  {
    metaTags.map(({ name, content }) => {
      if (name.includes("og")) {
        return <meta property={name} content={content} />;
      }
      return <meta name={name} content={content} />;
    })
  }
</>
