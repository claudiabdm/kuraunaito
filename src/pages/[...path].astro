---
import i18next from "i18next";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import { generatePathsFromStories, getStories } from "../utils/functions";
import Layout from "../layouts/Layout.astro";

export async function getStaticPaths() {
  return generatePathsFromStories();
}
const { title, slug, lang } = Astro.props;

i18next.changeLanguage(lang);

const {
  data: { story },
} = await getStories({ slug });

const hasEntriesComponent = story.content.component === "EntriesEntry";
---

<Fragment slot="head">
  {
    hasEntriesComponent && (
      <>
        <link
          rel="preconnect"
          href="https://cdn.jsdelivr.net"
        />
        <link
          rel="preconnect"
          href="https://app.storyblok.com"
        />
      </>
    )
  }
</Fragment>

<Layout {...{ title, slug, seo: story.content.seo }}>
  <StoryblokComponent
    {...Astro.props}
    blok={story?.content}
  />
</Layout>
